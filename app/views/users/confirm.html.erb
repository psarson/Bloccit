<h2>Confirmation</h2>

<div class="row">
  <div class="col-md-8">
    <h2> Are you sure this is the correct information?</h2>
     <h4> Email: <%= @user.email %></h4>
     <h4> Name: <%= @user.name %></h4>
  </div>
</div>
<div class="row">
  <div class="col-md-8">
    <%= button_to 'Yes', {controller: "users", action: "confirm", params: params}, class: "btn btn-success" %>
  </div>
  <div class="col-md-8">
    <%= button_to 'No', {controller: "users", action: "new"}, class: "btn btn-danger", :method => :get %>
  </div>
</div> 
